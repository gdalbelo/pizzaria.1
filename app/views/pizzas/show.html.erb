<%- model_class = Pizza -%>
<div class="page-header">
  <h1><%=t '.title', :default => Pizza %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nome) %></dt>
      <dd><pre class="prettyprint"><%= @pizza.nome %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:preco) %></dt>
      <dd><pre class="prettyprint"><%= @pizza.preco %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pizzas_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pizza_path(@pizza), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pizza_path(@pizza),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

